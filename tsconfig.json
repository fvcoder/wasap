{
    "$schema": "https://json.schemastore.org/tsconfig",
    "compilerOptions": {
      "module": "commonjs",
      "declaration": true,
      "noImplicitAny": false,
      "removeComments": false,
      "noLib": false,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "target": "es5",
      "sourceMap": true,
      "strictNullChecks": true,
      "skipLibCheck": true,
      "esModuleInterop": true,
      "lib": [
        "ESNext"
      ]
    },
    "exclude": [
      "node_modules",
      "**/*.spec.ts"
    ]
  }